<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:layout_marginBottom="2dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_margin="4dp"
        android:background="@color/white"


        card_view:cardCornerRadius="2dp"

        card_view:cardElevation="8dp"
   >

        <android.support.constraint.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"

                android:layout_marginRight="16dp"
                android:background="@color/white"
                android:padding="5dp"
                android:text="Hotel Residency"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/viccinity"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Kaniampuzha Road, Vyttila, Ernakulam"
                android:padding="5dp"
                android:textSize="15dp"
                android:textColor="@color/grey_dark"
                card_view:layout_constraintEnd_toEndOf="@+id/name"
                card_view:layout_constraintHorizontal_bias="0.857"
                card_view:layout_constraintStart_toStartOf="@+id/name"
                card_view:layout_constraintTop_toBottomOf="@+id/name" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="5dp"
                android:text="Rating"
                android:textColor="@color/grand_red"
                android:textSize="15dp"
                card_view:layout_constraintEnd_toEndOf="@+id/name"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toStartOf="@+id/name"
                card_view:layout_constraintTop_toBottomOf="@+id/viccinity" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                card_view:layout_constraintEnd_toStartOf="@+id/name"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/cast_album_art_placeholder" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
